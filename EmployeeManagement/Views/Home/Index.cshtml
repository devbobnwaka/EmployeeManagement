@model IEnumerable<Employee>;

    @{
        ViewBag.Title = "Employee List";
    }

    <div class="card-deck">

        <div class="row  m-3">
            @foreach (var employee in Model)
            {
            <div class="col-sm-4">
                <div class="card">
                    <h1> @employee.Name</h1>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top" src="~/images/proj_img.jpg" asp-append-version="true"/>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-success m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
            }
            </div>
    </div>