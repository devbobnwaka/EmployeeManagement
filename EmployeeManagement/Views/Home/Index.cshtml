@model IEnumerable<Employee>;

    @{
        ViewBag.Title = "Employee List";
    }

    <div class="card-deck">

        <div class="row  m-3">
            @foreach (var employee in Model)
            {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "proj_img.jpg");

            <div class="col-sm-4" style="min-width: 18rem; max-width:30.5%;" >
                <div class="card">
                    <h1> @employee.Name</h1>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-success m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
            }
            </div>
    </div>